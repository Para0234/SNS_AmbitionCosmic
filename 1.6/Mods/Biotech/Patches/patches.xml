<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAdd"> <!--Make Gen 1-3 gene processors link to Gene Assembler-->
                <xpath>/Defs/ThingDef[defName="GeneAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                <value>
                    <li>AOTC_Gen1GeneProcessor</li>
                    <li>AOTC_Gen2GeneProcessor</li>
                    <li>AOTC_Gen3GeneProcessor</li>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
